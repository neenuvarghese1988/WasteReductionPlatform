@model WasteReductionPlatform.ViewModels.RegisterViewModel

@{
	ViewData["Title"] = "Register";
}

@* <h1>Register</h1> *@

<div class="container">
	<div class="row justify-content-center mt-5 align-items-stretch">
		<!-- Left Image Column -->
		<div class="col-lg-3 d-none d-lg-flex align-items">
			<img src="/images/img3.jpg" alt="Left Image" class="img-fluid rounded shadow">
		</div>

		<!-- Register Form Column -->
		<div class="col-md-6 d-flex align-items-stretch">
			<div class="card shadow-lg w-100">
				<div class="card-body">
					<h2 class="text-center mb-4">Register</h2>

					@if (TempData["Success"] != null)
					{
						<div class="alert alert-success" role="alert">
							@TempData["Success"]
						</div>
					}
					@if (TempData["Error"] != null)
					{
						<div class="alert alert-danger" role="alert">
							@TempData["Error"]
						</div>
					}

					<form asp-action="Register">
						<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

						<!-- Username Field -->
						<div class="form-group">
							<label asp-for="Username"></label>
							<input asp-for="Username" class="form-control" />
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>

						<!-- Password Field -->
						<div class="form-group">
							<label asp-for="Password"></label>
							<input asp-for="Password" class="form-control" type="password" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<!-- Confirm Password Field -->
						<div class="form-group">
							<label asp-for="ConfirmPassword">Confirm Password</label>
							<input asp-for="ConfirmPassword" class="form-control" type="password" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>

						@* <!-- Role Selection Dropdown -->
						<div class="form-group">
							<label asp-for="Role">Role</label>
							<select asp-for="Role" class="form-control">
								<option value="User">User</option>
								<option value="Admin">Admin</option>
							</select>
							<span asp-validation-for="Role" class="text-danger"></span>
						</div> *@

						<!-- User Type Dropdown -->
						@* Conditionally display UserType if not Admin *@
						<div class="form-group">
							<label asp-for="UserType">User Type</label>
							<select asp-for="UserType" class="form-control">
								<option value="">-- Select --</option>
								<option value="Residential">Residential</option>
								<option value="Commercial">Commercial</option>
							</select>
							<input type="hidden" asp-for="UserType" />
							<span asp-validation-for="UserType" class="text-danger"></span>
						</div>

						<!-- Street Address Field -->
						<div class="form-group">
							<label asp-for="StreetAddress">Street Address</label>
							<input asp-for="StreetAddress" class="form-control" />
							<span asp-validation-for="StreetAddress" class="text-danger"></span>
						</div>

						<!-- City Field -->
						<div class="form-group">
							<label asp-for="City"></label>
							<input asp-for="City" class="form-control" />
							<span asp-validation-for="City" class="text-danger"></span>
						</div>

						<!-- Province Dropdown -->
						<div class="form-group">
							<label asp-for="Province"></label>
							<select asp-for="Province" class="form-control">
								<option value="">-- Select Province --</option>
								<option value="AB">Alberta</option>
								<option value="BC">British Columbia</option>
								<option value="MB">Manitoba</option>
								<option value="NB">New Brunswick</option>
								<option value="NL">Newfoundland and Labrador</option>
								<option value="NS">Nova Scotia</option>
								<option value="ON">Ontario</option>
								<option value="PE">Prince Edward Island</option>
								<option value="QC">Quebec</option>
								<option value="SK">Saskatchewan</option>
								<option value="NT">Northwest Territories</option>
								<option value="NU">Nunavut</option>
								<option value="YT">Yukon</option>
							</select>
							<span asp-validation-for="Province" class="text-danger"></span>
						</div>

						<!-- Postal Code Field -->
						<div class="form-group">
							<label asp-for="PostalCode"></label>
							<input asp-for="PostalCode" class="form-control" />
							<span asp-validation-for="PostalCode" class="text-danger"></span>
						</div>

						<button type="submit" class="btn btn-primary">Register</button>
					</form>

					<div class="mt-3">
						<p>Already registered? <a asp-action="Login">Log In</a></p>
					</div>
				</div>
			</div>
		</div>
		<!-- Right Image Column -->
		<div class="col-lg-3 d-none d-lg-flex align-items-stretch">
			<img src="/images/img4.jpg" alt="Right Image" class="img-fluid rounded shadow">
		</div>
	</div>
</div>

<style>
	.card {
		border: 2px solid black;
	}

	.card-body {
		padding: 2rem;
	}

	.form-group {
		margin-bottom: 1.5rem;
	}

	.form-control {
		width: 100%; /* Adjust width as needed */
		padding: 0.375rem 0.75rem; /* Adjust padding for smaller size */
		font-size: 14px; /* Adjust font size for smaller text */
		line-height: 1.5; /* Adjust line height for smaller text */
		height: 36px; /* Adjust height as needed */
		border-radius: 5px; /* Rounded corners */
		border: 1px solid #ced4da; /* Border color */
		justify-content: center;
	}

	.btn-primary {
		background-color: #007bff;
		border-color: black;
	}

		.btn-primary:hover {
			background-color: #0069d9;
			border-color: #0062cc;
		}

	.btn-block {
		display: flex;
		justify-content: center; /* Center align button horizontally */
		width: 50%;
		margin: 0 auto;
	}

	.alert {
		border-radius: 10px;
	}

	.img-fluid {
		max-width: 100%;
		height: auto;
		border-radius: 10px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	}

	.align-items-stretch {
		align-items: stretch !important;
	}

	.d-lg-flex {
		display: flex !important;
	}

	.w-100 {
		width: 100% !important;

	}
