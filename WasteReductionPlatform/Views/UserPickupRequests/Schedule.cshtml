@model IEnumerable<WasteReductionPlatform.Models.PickupSchedule>

@{
    ViewData["Title"] = "Request New Pickup";
}

<h1>Request New Pickup</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Pickup Date</th>
            <th>Pickup Type</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model)
        {
            <tr>
                <td>@schedule.PickupDate.ToShortDateString()</td>
                <td>@schedule.PickupType</td>
                <td>@schedule.Area</td>
                <td>
                    <form asp-action="Create" method="post">
                        <input type="hidden" name="id" value="@schedule.Id" />
                        <button type="submit" class="btn btn-primary">Request Pickup</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
