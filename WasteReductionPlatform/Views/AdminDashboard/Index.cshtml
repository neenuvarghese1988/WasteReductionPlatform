@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1>Admin Dashboard</h1>

    <div class="row mt-4">
        <!-- Manage Pickup Schedules -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Pickup Schedules</h5>
                    <p class="card-text">Create and manage waste pickup schedules.</p>
                    <a asp-controller="PickupSchedules" asp-action="Create" class="btn btn-primary btn-block">Go to Schedules</a>
                </div>
            </div>
        </div>
       
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">View Pickup Schedules</h5>
                    <p class="card-text">Review pickup schedules.</p>
                    <a asp-controller="PickupSchedules" asp-action="Index" class="btn btn-dark btn-block">View Schedules</a> 
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title"> Manage Pickup Requests</h5>
                    <p class="card-text">Confirm pickup request.</p>
                    <a asp-controller="AdminPickupRequests" asp-action="Index" class="btn btn-primary btn-block">Pickup Requests</a>
                </div>
            </div>
        </div>
        <!-- Manage Users -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View,create, edit, and delete user accounts.</p>
                    <a asp-controller="UserManagement" asp-action="" class="btn btn-info btn-block">Go to Users</a>
                </div>
            </div>
        </div>
