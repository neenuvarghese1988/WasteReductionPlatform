@model IEnumerable<WasteReductionPlatform.Models.WasteLog>

@{
    ViewData["Title"] = "High Waste Alerts";
}

<h1>High Waste Alerts</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Type</th>
            <th>User Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Date?.ToShortDateString()</td>
                <td>@log.Weight</td>
                <td>@log.WasteType</td>
                <td>@log.UserType</td>
            </tr>
        }
    </tbody>
</table>
