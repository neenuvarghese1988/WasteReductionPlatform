@model List<WasteReductionPlatform.Models.EducationalResource>

@{
    ViewData["Title"] = "Educational Resources";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Font Awesome for icons -->
    <link rel="sytlesheet" href="~/css/site.css" />
    <style>
        body {
            margin-bottom: 60px;
            border: 5px solid green;
            padding: 20px;
            margin: 50px;
            font-family: Dax;
            background-image: url('images/background.png');
            background-size: cover;
            background-attachment: fixed;
        }

        h1 {
            color: black;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        }

        .resource-section {
            margin-bottom: 40px;
            padding: 20px;
            background-color: #ffffff;
            border: 2px solid green;
            border-radius: 5px;
            box-shadow: 10px 10px 10px 0px black;
        }

            .resource-section h2 {
                color: brown; /* Bootstrap primary color */
                margin-bottom: 15px;
                text-shadow: 1px 1px 2px brown;
            }

            .resource-section ul {
                list-style-type: disc;
                padding-left: 0;
            }

                .resource-section ul li {
                    padding-bottom: 10px;
                }

        .video-section {
            margin-bottom: 40px;
        }



        .download-section {
            margin-bottom: 40px;
        }

        .tips-section {
            margin-top: 40px;
            text-align: center;
        }

            .tips-section button {
                font-size: 18px;
                padding: 10px 20px;
                border-radius: 30px;
            }

        .podcast-section {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .podcast-section h2 {
                font-size: 1.5rem;
                margin-bottom: 15px;
                color: #333;
            }

        .img-fluid {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .embed-responsive {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4 mb-4">Educational Resources</h1>

        <div class="row">
            <div class="col-lg-6">
                <div class="resource-section">
                    <h2>Notes on Waste Reduction and Management</h2>
                    <p>
                        Reducing waste is crucial for a sustainable future. Here are some tips to help you get started:
                    </p>
                    <ul>
                        <li>Practice the 3 R's: Reduce, Reuse, and Recycle.</li>
                        <li>Avoid single-use plastics and opt for reusable alternatives.</li>
                        <li>Compost your organic waste to create nutrient-rich soil.</li>
                        <li>Donate or sell items you no longer need instead of throwing them away.</li>
                        <li>Support businesses that prioritize sustainability and waste reduction.</li>
                    </ul>
                    <p>
                        By making small changes in our daily lives, we can significantly reduce our environmental impact and create a cleaner, greener world for future generations.
                    </p>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="video-section">
                    <h2 class="mb-3">Video on Waste Reduction</h2>
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/6jQ7y_qQYUA" allowfullscreen></iframe>
                    </div>
                    <p class="mt-3">
                        Watch this informative video from National Geographic about global waste crisis solutions.
                    </p>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <!-- Podcast Section -->
                <div class="col-md-6">
                    <div class="podcast-section resource-section">
                        <h2 class="mb-3">Featured Podcast Episode</h2>
                        <div class="row">
                            <!-- Image Column -->
                            <div class="col-md-6">
                                <img src="/images/background.jpg" alt="Podcast" class="img-fluid rounded shadow">
                            </div>
                            <!-- Audio Player Column -->
                            <div class="col-md-6">
                                <div class="embed-responsive embed-responsive-16by9 mb-3">
                                    <audio class="embed-responsive-item" controls>
                                        <source src="/files/podcast-episode.mp3" type="audio/mpeg">
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                                <p class="para">
                                    Listen to this insightful episode on the importance of waste reduction.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Downloadable Resources Section -->
                <div class="col-md-6">
                    <div class="resource-section">
                        <h2 class="mb-3">Downloadable Resources</h2>
                        <p>Check out these helpful resources for more information on waste reduction and management:</p>
                        <ul>
                            <li>
                                <a href="/files/resource1.pdf" target="_blank">
                                    <i class="fas fa-file-pdf"></i> Waste Reduction Guide (PDF)
                                </a>
                            </li>
                            <li>
                                <a href="/files/resource2.jpg" target="_blank">
                                    <i class="fas fa-image"></i> Recycling Infographic (JPG)
                                </a>
                            </li>
                            <li>
                                <a href="https://www.almostzerowaste.com/zero-waste-books/" target="_blank">
                                    <i class="fas fa-book"></i> Zero Waste Living (EPUB)
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="tips-section">
                    <h2 class="mb-3">Request Waste Reduction Tips</h2>
                    <p>If you would like personalized tips on how to reduce waste, click the button below to request tips from our experts.</p>
                    <button id="requestTipsButton" class="btn btn-primary">Request Tips</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#requestTipsButton').click(function () {
                // AJAX call to backend to handle request
                $.ajax({
                    url: '@Url.Action("RequestTips", "EducationalResources")', // URL to the controller action
                    type: 'POST',
                    success: function (response) {
                        // Redirect to a new page with the tips
                        window.location.href = '../Tips'; // Replace '../Tips' with the actual URL of your tips page
                    },
                    error: function () {
                        alert('There was an error processing your request. Please try again later.');
                    }
                });
            });
        });
    </script>
</body>
</html>