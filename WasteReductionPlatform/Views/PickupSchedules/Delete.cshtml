@model WasteReductionPlatform.Models.PickupSchedule

@{
    ViewData["Title"] = "Delete Pickup Schedule";
}

<h1>Delete Pickup Schedule</h1>

<h3>Are you sure you want to delete this pickup schedule?</h3>

<!-- TempData Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickupDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickupDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickupType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickupType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
