@model IEnumerable<WasteReductionPlatform.Models.PickupSchedule>

@{
    ViewData["Title"] = "Schedule Pickup";
}

<h1>Schedule Pickup</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Area</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PickupDate.ToShortDateString()</td>
                <td>@item.PickupType</td>
                <td>@item.Area</td>
                <td>
                    <a asp-action="RequestPickup" asp-route-id="@item.Id" class="btn btn-primary">Request Pickup</a>
                </td>
            </tr>
        }
    </tbody>
</table>
