@model IEnumerable<WasteReductionPlatform.Models.PickupSchedule>

@{
    ViewData["Title"] = "Pickup Schedules";
}

<h1>Pickup Schedules</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Pickup Date</th>
            <th>Pickup Type</th>
            <th>User Type</th>
            <th>Area</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
          @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No records to display.</td>
            </tr>
        }
        else
        {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PickupDate.ToShortDateString()</td>
                <td>@item.PickupType</td>
                <td>@item.UserType</td>
                <td>@item.Area</td>
                <td>
                    <a asp-controller="PickupSchedules" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="PickupSchedules"  asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>