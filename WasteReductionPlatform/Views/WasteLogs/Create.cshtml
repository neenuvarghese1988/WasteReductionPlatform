@model WasteReductionPlatform.ViewModels.WasteLogViewModel

@{
    ViewData["Title"] = "Log New Waste";
}

<h1>Log New Waste</h1>



<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight (kg)</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserType"></label>
        <select asp-for="UserType" class="form-control" disabled>
            <option value="Residential">Residential</option>
            <option value="Commercial">Commercial</option>
        </select>
        <input type="hidden" asp-for="UserType" /> <!-- Add hidden input for posting UserType -->
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WasteType"></label>
        <select asp-for="WasteType" class="form-control" id="WasteType">
            <option value="">-- Select Waste Type --</option> <!-- Ensure this option is not selected -->
            @foreach (var type in Model.WasteTypes)
            {
                <option value="@type">@type</option>
            }
        </select>
        <span asp-validation-for="WasteType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Log Waste</button>
    <a asp-controller="UserDashboard" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
