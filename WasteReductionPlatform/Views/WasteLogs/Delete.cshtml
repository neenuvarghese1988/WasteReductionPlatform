@model WasteReductionPlatform.Models.WasteLog

@{
    ViewData["Title"] = "Delete Waste Log";
}

<h1>Delete Waste Log</h1>

<h3>Are you sure you want to delete this waste log?</h3>


@if (TempData["ErrorWasteLog"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorWasteLog"]
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>

        <dt class="col-sm-2">Weight (kg)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Weight)</dd>

        <dt class="col-sm-2">Waste Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.WasteType)</dd>

        <dt class="col-sm-2">User Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserType)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
